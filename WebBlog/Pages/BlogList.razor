@page "/"

@using WebBlog.Data
@using WebBlog.Shared
@inject BlogService BlogService

@if (blogs == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <Tag></Tag>
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Title</th>
                <th>Description</th>
                @*<th>Author</th>*@
            </tr>
        </thead>
        <tbody>
            @foreach (var post in blogs)
            {
                <tr>
                    <td>@post.Published_At.ToString("dd/MM/yyyy")</td>
                    <td><a href="/posts/@post.Slug">@post.Title</a></td>
                    <td>@post.Description</td>
                    @*<td><a href="https://twitter.com/@post.User.Twitter_Username">@post.User.Twitter_Username</a></td>*@
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<BlogPosts> blogs;

    protected override async Task OnInitializedAsync()
    {
        blogs = await BlogService.GetBlogsAsync();
    }
}